<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_mine_order_1"
        style="@style/mine_button_style"
        android:drawableTop="@drawable/icon_pay_big"
        android:text="待付款" />

    <TextView
        android:id="@+id/tv_mine_order_2"
        style="@style/mine_button_style"
        android:drawableTop="@drawable/icon_delivery"
        android:text="待发货" />

    <TextView
        android:id="@+id/tv_mine_order_3"
        style="@style/mine_button_style"
        android:drawableTop="@drawable/icon_logistics"
        android:text="待收货" />

    <TextView
        android:id="@+id/tv_mine_order_4"
        style="@style/mine_button_style"
        android:drawableTop="@drawable/icon_evaluate"
        android:text="待评价" />

</LinearLayout>