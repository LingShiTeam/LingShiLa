<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_remind_dialog"
    android:orientation="vertical"
    android:paddingTop="15.0dip">

    <TextView
        android:id="@+id/dialog_remind_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/c8"
        android:text="客服电话:123456789"
        android:textSize="@dimen/s2" />

    <TextView
        android:id="@+id/dialog_remind_content_string"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="17.0dip"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.4"
        android:textColor="@color/c8"
        android:textSize="@dimen/s8"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/dialog_remind_content_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"/>

    <View
        android:id="@+id/dialog_remind_margin_bottom"
        android:layout_width="fill_parent"
        android:layout_height="15.0dip" />

    <View
        android:id="@+id/dialog_remind_cut_line_ver"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#eaeaea"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_remind_cancle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="取消"
            android:paddingBottom="15.0dip"
            android:paddingTop="15.0dip"
            android:textColor="@color/c8"
            android:textSize="@dimen/s8" />

        <View
            android:id="@+id/dialog_remind_btn_cut_line"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/c7" />

        <TextView
            android:id="@+id/dialog_remind_confirm"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="呼叫"
            android:paddingBottom="15.0dip"
            android:paddingTop="15.0dip"
            android:textColor="@color/c8"
            android:textSize="@dimen/s8"/>
    </LinearLayout>
</LinearLayout>