<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/mine_cart2_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="修改购买数量" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_mine_cart2_dilaog_jian"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_reduce_point_normal" />

        <EditText
            android:id="@+id/iv_mine_cart2_dilaog_num"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/mine_cart2_edit"
            android:gravity="center"
            android:inputType="number"
            android:text="11" />

        <ImageView
            android:id="@+id/iv_mine_cart2_dilaog_add"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_add_point_normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="#33000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/mine_cart2_quxiao"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:id="@+id/iv_mine_cart2_dilaog_quxiao"
            android:text="取消"
            android:textSize="15sp" />

        <TextView
            android:clickable="true"
            android:id="@+id/iv_mine_cart2_dilaog_queding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/mine_cart2_queding"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>