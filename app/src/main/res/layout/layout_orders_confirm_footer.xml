<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/FineLineC4Style"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center_vertical"
            android:padding="7.0dip">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="99.0dip"
                android:layout_marginStart="99.0dip"
                android:text="应付金额"
                android:textColor="@color/black"
                android:textSize="17.0dip"/>

            <TextView
                android:id="@+id/item_cost_pay_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView8"
                android:layout_marginLeft="15.0dip"
                android:layout_marginStart="19.0dip"
                android:layout_toEndOf="@id/textView8"
                android:layout_toRightOf="@id/textView8"
                android:textColor="@color/c1"
                android:textSize="17.0dip"/>

            <TextView
                android:id="@+id/item_cost_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18.0dip"
                android:layout_marginRight="9.0dip"
                android:clickable="true"
                android:drawableRight="@drawable/icon_show_detail_down"
                android:text="详情 "
                android:textColor="@color/black"
                android:textSize="13.0dip"/>

            <TextView
                android:id="@+id/item_cost_detail_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18.0dip"
                android:layout_marginRight="9.0dip"
                android:clickable="true"
                android:drawableRight="@drawable/icon_show_detail_direction_up"
                android:text="收起 "
                android:textColor="@color/black"
                android:textSize="13.0dip"
                android:visibility="gone"/>
        </RelativeLayout>

        <View style="@style/FineLineC4Style"/>

        <LinearLayout
            android:id="@+id/item_confirm_is_show_pay_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:padding="7dp"
                    android:text="商品总额"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/item_cost_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:padding="7dp"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:padding="7dp"
                    android:text="邮费"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/item_cost_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:padding="7dp"
                    android:textSize="14sp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:padding="7dp"
                    android:text="优惠"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/item_coupon_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:padding="7dp"
                    android:textSize="14sp"
                    />

            </RelativeLayout>


            <View
                style="@style/FineLineC4Style"
                android:layout_marginTop="-1.0dip"/>
        </LinearLayout>

        <View style="@style/BoldLineStyle"/>

        <View style="@style/FineLineC4Style"/>

        <TextView
            android:id="@+id/item_coupon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="7dp"
            android:text="优惠券"
            android:textColor="@color/c1"/>

        <View
            style="@style/FineLineC4Style"
            android:layout_marginTop="-1.0dip"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip">

            <EditText
                android:id="@+id/item_orders_confirm_note_edit_new"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/b1"
                android:layout_marginRight="@dimen/b1"
                android:background="@null"
                android:clickable="true"
                android:hint="您对商家有特殊要求可在此添加备注"
                android:singleLine="true"
                android:textColor="@color/c8"
                android:textColorHint="@color/c3"
                android:textSize="@dimen/s4"/>

            <View
                style="@style/FineLineMarginStyle"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <View
            style="@style/FineLineC4Style"
            android:layout_marginTop="-1.0dip"/>

        <View style="@style/BoldLineStyle"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_order_choice_zfb"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:clickable="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/btn_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11.0dip"
            android:layout_marginStart="11.0dip"
            android:src="@drawable/btn_cart_select"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="41.0dip"
            android:layout_marginStart="41.0dip"
            android:src="@drawable/icon_zfb"/>

        <TextView
            android:id="@id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toEndOf="@id/imageView7"
            android:layout_toRightOf="@id/imageView7"
            android:text="支付宝"
            android:textColor="@color/c8"
            android:textSize="@dimen/s3"/>
    </RelativeLayout>

    <View
        style="@style/FineLineC4Style"
        android:layout_marginTop="-1.0dip"/>

    <RelativeLayout
        android:id="@+id/item_order_choice_wx"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:clickable="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/btn_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11.0dip"
            android:layout_marginStart="11.0dip"
            android:src="@drawable/btn_cart_select"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:layout_marginStart="12.0dip"
            android:layout_toEndOf="@id/btn_wx"
            android:layout_toRightOf="@id/btn_wx"
            android:src="@drawable/icon_wx2x"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toEndOf="@id/imageView1"
            android:layout_toRightOf="@id/imageView1"
            android:text="微信支付"
            android:textColor="@color/c8"
            android:textSize="@dimen/s3"/>
    </RelativeLayout>
</LinearLayout>