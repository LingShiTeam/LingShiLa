<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/interval1"
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="@color/c5"/>

    <LinearLayout
        android:id="@+id/home_special"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_spcial_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_lover"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:scaleType="fitXY"
            android:src="@drawable/btn_lover"/>

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="@color/c5"/>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_movie"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/btn_movie"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/fine_line_height"
                android:background="@color/c5"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="0.6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_tea"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_beer"/>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:background="@color/c5"/>

                <ImageView
                    android:id="@+id/btn_beer"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_beer"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="@color/c5"/>

    <LinearLayout
        android:id="@+id/today_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/both_sides_new_distance">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-1.0dip"
            android:background="@drawable/icon_dot"/>

        <TextView
            android:id="@+id/home_item_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.0dip"
            android:text="品牌5折团"
            android:textColor="@color/c2"
            android:textSize="@dimen/s2"/>

        <TextView
            android:id="@+id/home_item_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7.0dip"
            android:text="独立潮牌为你而生 5折优惠"
            android:textColor="@color/c3"
            android:textSize="@dimen/s5"/>
    </LinearLayout>

    <View
        style="@style/FineLineC4Style"
        android:layout_gravity="bottom"/>
</LinearLayout>