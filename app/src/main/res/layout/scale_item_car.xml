<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_car_ziying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/cb_car_ziying_quanxuan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/address_default_selector"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:drawableLeft="@drawable/icon_shop"
                android:drawablePadding="5dp"
                android:text="小喵自营商品" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_car_bukemai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="当前不可购买的商品"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_car_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/address_default_selector"
            android:button="@null" />

        <FrameLayout
            android:id="@+id/fl_mine_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#33000000"
            android:padding="1dp">

            <ImageView
                android:id="@+id/iv_car_item"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/default_bg_150_150" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[美国滋滋脆]POPCORNERS干酪胡椒玉米片 142g" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="口味:干酪胡椒味"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cart_add_num_bg"
                android:orientation="horizontal">

                <Button
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#66000000"
                    android:textSize="20sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#33000000" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:text="22"
                    android:textSize="20sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#33000000" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#66000000"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="￥16.5"
                android:textSize="18sp" />

            <TextView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="#66000000"
                android:text="￥29"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>