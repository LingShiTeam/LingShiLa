<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_mine_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收件人:xxx"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_mine_address_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="131xxxxxxxx"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_mine_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mine_address_name"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址" />

    <View
        android:id="@+id/view_mine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_mine_address"
        android:background="#eaeaea" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_mine"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_mine_address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableLeft="@drawable/address_default_selector"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="设为默认" />

        <TextView
            android:id="@+id/tv_mine_address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/btn_deleted"
            android:drawablePadding="10dp"
            android:text="删除" />

        <TextView
            android:id="@+id/tv_mine_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/tv_mine_address_delete"
            android:drawableLeft="@drawable/btn_edit"
            android:drawablePadding="10dp"
            android:text="编辑" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_address"
        android:background="#eaeaea" />

</RelativeLayout>