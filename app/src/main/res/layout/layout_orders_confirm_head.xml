<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/c5"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/line_address"/>
    /**收货地址模块**/

    <RelativeLayout
        android:id="@+id/orders_confirm_address_viewgroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12.0dip"
        android:paddingLeft="@dimen/b1"
        android:paddingRight="@dimen/b1"
        android:paddingTop="12.0dip">

        <ImageView
            android:id="@+id/orders_detail_address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_address"/>

        <TextView
            android:id="@+id/orders_confirm_no_select_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/orders_detail_address_icon"
            android:text="您尚未添加收货地址"
            android:textColor="@color/c1"
            android:textSize="@dimen/s3"/>
        /**收货人**/

        <TextView
            android:id="@+id/orders_confirm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/orders_detail_address_icon"
            android:textColor="@color/c2"
            android:textSize="@dimen/s3"/>
        /**联系人手机**/

        <TextView
            android:id="@+id/orders_confirm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/orders_confirm_name"
            android:layout_marginLeft="20.0dip"
            android:layout_toEndOf="@id/orders_confirm_name"
            android:layout_toRightOf="@id/orders_confirm_name"
            android:textColor="@color/c2"
            android:textSize="@dimen/s3"/>
        /**收货地址**/

        <TextView
            android:id="@+id/orders_confirm_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/orders_confirm_name"
            android:layout_alignStart="@id/orders_confirm_name"
            android:layout_below="@id/orders_confirm_name"
            android:layout_marginRight="@dimen/b1"
            android:layout_marginTop="5.0dip"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/c8"
            android:textSize="@dimen/s7"/>

        <ImageView
            android:id="@+id/orders_confirm_entry_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3.0dip"
        android:layout_marginBottom="10.0dip"
        android:background="@drawable/line_address"/>
</LinearLayout>