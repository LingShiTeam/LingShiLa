<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_feedback_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:text="这里的零食看了都想吃"
            android:textColor="#f00"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/et_mine_login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:hint="请输入11位手机号码"
                android:inputType="phone"
                android:minLines="1"
                android:singleLine="true"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#efefef" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/et_mine_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:hint="请输入6-16位英文数字密码"
                android:inputType="textPassword"
                android:minLines="1"
                android:singleLine="true"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#efefef" />

            <ImageView
                android:id="@+id/iv_mine_login_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:src="@drawable/password_eye_selector" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_mine_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/mine_login_button_selector"
            android:enabled="false"
            android:padding="10dp"
            android:text="登录"
            android:textColor="@drawable/mine_login_textcolor_selector" />

        <TextView
            android:id="@+id/tv_mine_login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:text="忘记密码?" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:text="还没有账号?" />

            <TextView
                android:id="@+id/tv_mine_login_mobile_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_mobile_register"
                android:clickable="true"
                android:text="手机注册"
                android:textColor="#f00" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_three_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="33.0dip"
            android:visibility="visible">

            <TextView
                android:id="@+id/login_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="center_horizontal"
                android:text="第三方账户登录"
                android:textColor="@color/c3"
                android:textSize="@dimen/s8" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="94.0dip"
                android:layout_height="0.1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/login_platform"
                android:background="@color/c7" />

            <ImageView
                android:layout_width="94.0dip"
                android:layout_height="0.1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/login_platform"
                android:background="@color/c7" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mine_three_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:src="@drawable/icon_qq_normal" />

            <ImageView
                android:id="@+id/iv_mine_three_weixin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="50dp"
                android:clickable="true"
                android:src="@drawable/icon_wx_normal" />

            <ImageView
                android:id="@+id/iv_mine_three_weibo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:src="@drawable/icon_wb_normal" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/mine_loading"/>


</FrameLayout>

