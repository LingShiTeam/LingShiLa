<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/small_module_distance">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_home_promotion_img"
            android:layout_width="fill_parent"
            android:layout_height="171dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_class_brand612_250"
            />

        <ImageView
            android:id="@+id/item_goods_empty"
            android:layout_width="@dimen/sell_empty"
            android:layout_height="@dimen/sell_empty"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_end"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_module_distance"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_home_promotion_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_sales"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/c6"
            android:textSize="@dimen/s5"/>

        <TextView
            android:id="@+id/item_home_promotion_desc"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6.0dip"
            android:layout_toRightOf="@id/item_home_promotion_discount"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/c2"
            android:textSize="@dimen/s8"/>

        <TextView
            android:id="@+id/item_home_promotion_tag_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_clock"
            android:drawablePadding="5.0dip"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:text="标题"
            android:textColor="@color/c3"
            android:textSize="@dimen/s5"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/FineLineC4Style"/>
</LinearLayout>