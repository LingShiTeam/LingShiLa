<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ib_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_order" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_search_custom"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:text="请输入商品名称或关键字"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_cart_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_cart"
            android:background="@drawable/cart_num"
            android:gravity="center"
            android:padding="1dp"
            android:text="23"
            android:textColor="#ffffff"
            android:textSize="7sp" />

    </RelativeLayout>

</LinearLayout>