<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="249.0dip"
    android:layout_height="fill_parent"
    android:layout_gravity="left"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="57.0dip"
        android:layout_marginTop="59.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawerleft_image_avatar"
            android:layout_width="57.0dip"
            android:layout_height="57.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32.0dip"
            android:background="@drawable/default_photo"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/drawerleft_framelayout_login"
                android:layout_width="fill_parent"
                android:layout_height="57.0dip"
                android:layout_marginLeft="14.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/drawerleft_nick_name"
                    android:layout_width="125.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginBottom="2.0dip"
                    android:ellipsize="end"
                    android:text="零食小喵"
                    android:textColor="@color/c2"
                    android:textSize="14.0sp"/>

                <LinearLayout
                    android:layout_width="97.0dip"
                    android:layout_height="14.0dip"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/drawerleft_to_person_page"
                        android:layout_width="wrap_content"
                        android:layout_height="14.0dip"
                        android:text="个人中心 "
                        android:textColor="@color/c2"
                        android:textSize="10.0sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14.0dip"
                        android:text=" | "
                        android:textColor="@color/c2"
                        android:textSize="10.0sp"/>

                    <TextView
                        android:id="@+id/drawerleft_to_myorder_page"
                        android:layout_width="wrap_content"
                        android:layout_height="14.0dip"
                        android:text=" 我的订单"
                        android:textColor="@color/c2"
                        android:textSize="10.0sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawerleft_framelayout_unlogin"
                android:layout_width="fill_parent"
                android:layout_height="57.0dip"
                android:layout_marginLeft="14.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/drawerleft_to_login_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录 "
                        android:textColor="@color/c2"
                        android:textSize="14.0sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4.0dip"
                        android:text=" | "
                        android:textColor="@color/c2"
                        android:textSize="14.0sp"/>

                    <TextView
                        android:id="@+id/drawerleft_to_registe_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 注册"
                        android:textColor="@color/c2"
                        android:textSize="14.0sp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/left_drawer_list"
        android:layout_width="fill_parent"
        android:layout_height="350.0dip"
        android:layout_gravity="left"
        android:layout_marginTop="20.0dip"
        android:background="@color/white"
        android:divider="#00000000"
        android:dividerHeight="0.0dip"/>
</LinearLayout>