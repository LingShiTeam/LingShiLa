<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#11000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cb_mine_car_item_center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:layout_margin="10dp"
            android:background="@drawable/mine_cart_selector"
            android:button="@null" />

        <FrameLayout
            android:id="@+id/fl_mine_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#33000000"
            android:padding="1dp">

            <ImageView
                android:id="@+id/iv_mine_car_item"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/default_bg_150_150" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mine_car_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="2"
                android:text="[美国滋滋脆]POPCORNERS干酪胡椒玉米片 142g" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_mine_car_item_kouwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="口味:干酪胡椒味"
                android:textSize="12sp"
                android:maxLines="1"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/cart_add_num_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_mine_car_item_jian"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_reduce_point_normal"
                    android:gravity="center"
                    android:clickable="true"
                    android:textColor="#66000000"
                    android:textSize="25sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#33000000" />

                <Button
                    android:id="@+id/btn_mine_car_item_num"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="22"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#33000000" />

                <ImageView
                    android:id="@+id/btn_mine_car_item_add"
                    android:layout_width="30dp"
                    android:clickable="true"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_add_point_normal"
                    android:gravity="center"
                    android:textColor="#66000000"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mine_cart_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="￥16.5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_mine_cart_old_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="￥29"
                android:textColor="#66000000"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>